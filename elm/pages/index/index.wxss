/* pages/index/index.wxss */

.ccc {
  font-size: 12px;
  color: #434343;
  font-weight: normal
}

.container .product {
  justify-content: space-between;
  width: 100%;
  height: 92vh;
}

.product .sidebar {
  width: 25%;
  height: 92vh;
  background: #ccc;
}

.sidebar .tapNav {
  display: block;
  padding: 0.9rem 0.3rem;
  background: #ccc;
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  border-bottom: 1px solid #fff;
}
.tapNav.selected{
  background:lightblue;

}

.product .content {
  width: 74%;
  height: 92vh;
  padding-left: 10rpx;
}

.content .items {
  position: relative;
  justify-content: flex-start;
  width: 100%;
  height: 150rpx;
  padding: 10rpx;
  font-size: 14px;
  border-bottom: 1px solid #222;
  font-weight: bold;
  line-height: 40rpx;
  background: #fff;
}

.items .food-pic {
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 2px;
}
.items .food-dec{
  width:250rpx;
  overflow:hidden;
  white-space: nowrap;
  text-overflow: ellipsis; 

}
.items .food-buy {
  justify-content: space-between;
  align-items: center;
  position: absolute;
  bottom: 5rpx;
  right: 30rpx;
  width: 140rpx;
  height: 50rpx;
}
.food-buy .settled {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  background: lightskyblue;
}

.checkstand {
  justify-content: flex-start;
  align-items: center;
  width:100%;
  padding: 0 0 0 5%;
  height: 8vh;
  background: #141d27;
}

.checkstand .shopping {
  margin-top: -60rpx;
  padding: 20rpx;
  width: 50rpx;
  height: 50rpx;
  background: #fff;
  border-radius: 50%;
  box-shadow: 0 0 0 10rpx #141d27;
}

.checkstand .bill {
  color: #fff;
  padding-right: 20rpx;
  margin-left: 50rpx;
  font-weight: bold;
  border-right: 1px solid #434343;
}

.settle-accounts {
  width: 200rpx;
  height: 100%;
  border-radius: 0;
  text-align:left;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin: 0;
  margin-left: auto;
  background: #00b43c;
}